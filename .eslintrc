---
  root: true
  env:
    browser: true
    es6: true
    jest: true
    node: true
  extends:
    - eslint:recommended
    - airbnb
    - prettier
  parser: babel-eslint
  plugins:
    - babel
    - import
    - jest
    - react
    - prettier
  rules:
    emotion/jsx-import: error
    emotion/no-vanilla: error
    emotion/import-from-emotion: error
    emotion/styled-import: error
    lines-between-class-members: off
    prettier/prettier: error
    react/destructuring-assignment: off

  settings:
    import/resolver:
      webpack:
        config: 'lib/webpack/config.common.js'
      
