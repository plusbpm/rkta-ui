---
  root: true
  env:
    browser: true
    es6: true
    jest: true
    node: true
  extends:
    - eslint:recommended
    - airbnb
    - prettier
  parser: babel-eslint
  plugins:
    - babel
    - import
    - jest
    - react
    - prettier
  rules:
    prettier/prettier: error
    react/destructuring-assignment: off

  settings:
    import/resolver:
      webpack:
        config: 'lib/webpack/config.common.js'
      
